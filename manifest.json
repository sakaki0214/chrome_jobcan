{
  "name": "JOBCAN's UI Changer",
  "version": "1.0",
  "manifest_version": 2,

  "description": "This extension change JOBCAN's UI.",

  "icons" : {
    "16" : "imgs/icon_16.png",
    "48" : "imgs/icon_48.png",
    "128" : "imgs/icon_128.png"
  },

  "background": {
    "scripts": ["js/background.js"]
  },

  "browser_action": {
    "default_icon": {
      "19" : "imgs/icon_19.png",
      "38" : "imgs/icon_38.png"
    },
    "default_title": "JOBCAN's UI Changer"
  },

  "content_scripts": [
   {
     "matches": ["https://ssl.jobcan.jp/*"],
     "js": ["js/jquery-2.2.2.min.js", "js/common.js"],
     "css": ["css/style.css"],
     "run_at": "document_start"
   }
 ],

  "permissions" : [
    "tabs",
    "https://*/*",
    "http://*/*",
    "storage"
  ]
}
